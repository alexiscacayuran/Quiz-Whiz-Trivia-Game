  <body>
    <div class="bg-container vh-100">
      <div class="position-relative">
        <form method="post" id="quickstart">
          <input type="hidden" name="difficulty" value="easy" />
        </form>
        <div
          class="container d-flex align-items-center justify-content-center"
          id="menu"
        >
          <div>
            <div class="col-12 mt-4">
              <h1 class="text-center mb-5">
                Quiz<br />
                Whiz
              </h1>
            </div>
            <div class="d-grid gap-3">
              <button id="play" onclick="window.location.href='/create'">
                <span class="button-top"> PLAY </span>
              </button>
              <button form="quickstart" type="submit" formaction="\play">
                <span class="button-top">QUICK START</span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
